<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_indicators"
    android:backgroundTint="@color/colorBackground">


    <TextView
        android:id="@+id/tvTitleBed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvBedAvailable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent" 
        app:layout_constraintTop_toBottomOf="@id/tvTitleBed"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="14sp"
        android:text="Bed Tersedia :"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_baseline_king_bed_24"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvBedAvailableHospitalDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tvBedAvailable"
        app:layout_constraintTop_toBottomOf="@id/tvTitleBed"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        android:textColor="@color/green"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/tvBedEmpty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBedAvailable"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="14sp"
        android:text="Bed Kosong :"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_baseline_king_bedkosong_24"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvBedKosongHospitalDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tvBedEmpty"
        app:layout_constraintTop_toBottomOf="@id/tvBedAvailableHospitalDetails"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        android:textColor="@color/light_blue"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvQueue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBedEmpty"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="14sp"
        android:text="Antrian :"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_baseline_queue_antri_24"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvQueueHospitalDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tvQueue"
        app:layout_constraintTop_toBottomOf="@id/tvBedKosongHospitalDetails"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        android:textColor="@color/red"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/tvDataUpdated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvQueueHospitalDetails"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:layout_margin="10dp"
        android:text="data diupdate puku 12"/>





</androidx.constraintlayout.widget.ConstraintLayout>