<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/backgroundHospitals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:padding="10dp"
        android:background="@color/mainColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvHospitalsName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/devider"
                android:text="KALIMANTAN"
                android:drawableTint="@color/grey"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_baseline_coronavirus_24"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:id="@+id/devider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvHospitalsName"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/tvLocationHospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/devider"
                android:text="200,000"
                android:drawableStart="@drawable/ic_baseline_location_on_24"
                android:drawableTint="@color/grey"
                android:drawablePadding="10dp"
                android:textSize="22sp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvTitleUpdatedData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvLocationHospital"
                android:text="Lokasi Rumah Sakit"
                android:textSize="14sp"
                android:textColor="@color/grey"
                android:layout_marginTop="8dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/bedCases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitleUpdatedData"
                android:layout_marginTop="10dp"
                android:padding="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/mainColor"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvFreeBed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24000"
                        android:drawableTint="@color/green"
                        android:drawablePadding="8dp"
                        app:layout_constraintBottom_toTopOf="@id/tvTitleFreeBed"
                        android:drawableStart="@drawable/ic_baseline_king_bed_24"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="@color/green"
                        android:layout_marginTop="5dp"
                        android:padding="4dp"
                        android:textAlignment="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/tvTitleFreeBed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:textSize="12sp"
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="Kasur Tersedia"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvFreeBed"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/mainColor"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvQueue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24000"
                        android:drawableTint="@color/red"
                        android:drawablePadding="8dp"
                        app:layout_constraintBottom_toTopOf="@id/tvTitleQueue"
                        android:drawableStart="@drawable/ic_baseline_queue_antri_24"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="@color/red"
                        android:layout_marginTop="5dp"
                        android:padding="4dp"
                        android:textAlignment="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/tvTitleQueue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:textSize="12sp"
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="Jumlah Antrian"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvQueue"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvPhoneHospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bedCases"
                android:layout_marginVertical="10dp"
                android:drawableStart="@drawable/ic_baseline_local_phone_24"
                android:layout_marginHorizontal="10dp"
                android:textSize="20sp"
                android:padding="5dp"
                android:textAlignment="center"
                android:text="-"
                android:textStyle="bold"
                android:drawablePadding="10dp"
                android:textColor="#1F8868"/>

            <TextView
                android:id="@+id/tvDataUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/tvPhoneHospital"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="@color/grey"
                android:text="Data ini diupload"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>