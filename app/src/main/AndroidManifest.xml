        <activity
            android:name=".Activity.ProningActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".Activity.VaccineActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".Activity.HospitalsActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".Activity.ProvinsiActivity"
            android:launchMode="singleTop" />
        <activity
